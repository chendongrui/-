/**app.wxss**/
page{  box-sizing: border-box;background:rgba(248,248,248,1);font-size:24rpx;}
.left{ float: left}
.right{ float: right}
.clr{ overflow: hidden; clear: both}

.rel{ position: relative}
.abs{ position: absolute}
.fix{ position: fixed}

.tal{ text-align: left}
.tac{ text-align: center}
.tar{ text-align: rigth}

/* 弹出框 */
.mask{ 
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}
 
.modalDlg{
  width: 562rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  transform: translate(-50%,-50%);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size:28rpx;
  background: #fff
}
.navigator-hover {
  background-color: transparent;
  opacity: 1;
}