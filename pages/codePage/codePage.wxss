.code_info, .code_info .bar_code_bg{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.code_info image{
  width: 100%;
  height: 1206rpx;
}
.bar_code_bg{
  left: 0;
  top: 0;
}
.bar_code_bg .code_user, .bar_code_bg .code_content{
    margin-top: 158rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.bar_code_bg .code_user image{
   width: 200rpx;
   height: 200rpx;
   display: inline-block;
}
.bar_code_bg .code_user text{
  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(40,40,40,1);
  line-height:50rpx;
  margin-top: 28rpx;
}
.bar_code_bg .code_content{
   margin-top: 176rpx;
   font-size:40rpx;
   font-family:PingFangSC-Semibold,PingFang SC;
   font-weight:600;
   color:rgba(4,30,66,1);
   line-height:56rpx;
   text-align: center;
}
.bar_code_bg .code_content image {
    width: 636rpx;
    height: 188rpx;
    margin: 48rpx 0;
}
.bar_code_bg .code_content .code_num text{
  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(4,30,66,1);
  line-height:50rpx;
}
.bar_code_bg .code_content .code_num text:last-child{
  margin-left: 14rpx;
}
.bar_code_bg .code_content canvas{
  width: 636rpx;
  height: 188rpx;
  margin: 48rpx 0;
}